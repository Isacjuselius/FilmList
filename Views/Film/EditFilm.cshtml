@model FilmList.Models.FilmDetails

@{
    ViewData["Title"] = "Edit Film";
}

<h2>Edit film</h2>

<form asp-action="EditFilm" method="post">

    <input type="hidden" asp-for="FilmId" />

    <div class="form-group">
        <label asp-for="FilmTitle"></label>
        <input asp-for="FilmTitle" class="form-control" />
        <span asp-validation-for="FilmTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GenreId"></label>
        <input asp-for="GenreId" class="form-control" />
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save changes</button>

</form>
